<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SPV_Project.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SPV_Project"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Profile">
            <ShellContent
                Title="Profile"
                ContentTemplate="{DataTemplate local:Profile}"
                Route="Profile" />
        </Tab>
        <Tab Title="Exercises History">
            <ShellContent
                Title="Exercises History"
                ContentTemplate="{DataTemplate local:ExercisesHistory}"
                Route="ExercisesHistory" />
        </Tab>
        <Tab Title="Scanner">
            <ShellContent
                Title="Scanner"
                ContentTemplate="{DataTemplate local:Scanner}"
                Route="Scanner" />
        </Tab>
        <Tab Title="My Exercise">
            <ShellContent
                Title="My Exercise"
                ContentTemplate="{DataTemplate local:MyExercise}"
                Route="MyExercise" />
        </Tab>
        <Tab Title="All Exercises">
            <ShellContent
                Title="All Exercises"
                ContentTemplate="{DataTemplate local:AllExercises}"
                Route="AllExercises" />
        </Tab>
        <Tab Title="Login">
            <ShellContent
                Title="Login"
                ContentTemplate="{DataTemplate local:Login}"
                Route="Login" />
        </Tab>
        <Tab Title="Registration">
            <ShellContent
                Title="Registration"
                ContentTemplate="{DataTemplate local:Registration}"
                Route="Registration" />
        </Tab>
    </TabBar>

</Shell>
