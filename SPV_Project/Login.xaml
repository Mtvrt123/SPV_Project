<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SPV_Project.Login"
             Title="Login">
	<StackLayout>
		<Label Text="Log In" FontSize="Large" HorizontalOptions="Center" Margin="0,20,0,10" />
		<Entry Placeholder="Username" Keyboard="Text" Margin="20,10" />
		<Entry Placeholder="Password" IsPassword="True" Margin="20,10" />
		<StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,20,0,0">
			<Label Text="Forgot password?" Margin="0,0,5,0" />
			<Button Text="Reset password" BackgroundColor="Transparent" BorderColor="Transparent" TextColor="Blue" />
		</StackLayout>
		<StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,40,0,0">
			<Label Text="Don't have an account?" Margin="0,0,5,0" />
			<Button Text="Register" BackgroundColor="Transparent" BorderColor="Transparent" TextColor="Blue" />
		</StackLayout>
	</StackLayout>
</ContentPage>