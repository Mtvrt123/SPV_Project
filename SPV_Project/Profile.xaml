<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SPV_Project.Profile"
             Title="Profile">
    <Grid>
        <Grid.RowDefinitions>
            
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
    
        <VerticalStackLayout Grid.Column="0" Margin="15,0,15,0">
            <Label Text="Ime:"/>
            <Entry x:Name="Ime" Text="{Binding Uporabnik.Ime}" IsReadOnly="False"/>
            <Label Text="Priimek:"/>
            <Entry x:Name="Priimek" Text="{Binding Uporabnik.Priimek}" IsReadOnly="False"/>
            <Label Text="UporabniÅ¡ko ime:"/>
            <Entry x:Name="UporabniskoIme" Text="{Binding Uporabnik.UporabniskoIme}" IsReadOnly="False"/>
            <Label Text="Email:"/>
            <Entry x:Name="Email" Text="{Binding Uporabnik.Email}" IsReadOnly="False"/>
            <Button Text="Edit" Clicked="Edit_Clicked" Margin="0,15,0,0"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>