<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SPV_Project.MyExercise"
             Title="MyExercise">
    <Grid>

        <Border>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#D5F889" Offset="0.1"/>
                    <GradientStop Color="White" Offset="0.5"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <ScrollView>
            <VerticalStackLayout Grid.Column="0" Margin="15,0,15,0" HorizontalOptions="Center">
                <Label Text="Vadba" FontSize="Large" HorizontalOptions="Center" TextColor="Black"/>
                <Label Text="Izberite" TextColor="Black" HorizontalOptions="Center" Margin="0,0,0,50"/>

                <Border Stroke="black" StrokeThickness="1" Margin="5">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Picker TextColor="Black" Title="Športna oprema" x:Name="SportnaOprema"/>
                </Border>
                <Border Stroke="black" StrokeThickness="1" Margin="5">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Picker TextColor="Black" Title="Tip vadbe" x:Name="TipVadbe"/>
                </Border>
                <Border Stroke="black" StrokeThickness="1" Margin="5">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Picker TextColor="Black" Title="Obremenjen del telesa" x:Name="ObremenjeneMisice" />
                </Border>
                <Border Stroke="black" StrokeThickness="1" Margin="5">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Picker TextColor="Black" Title="Težavnost vadbe" x:Name="TezavnostVadbe"/>
                </Border>
                <Border Stroke="black" StrokeThickness="1" Margin="5">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Entry x:Name="st_ponovitev" Text=""/>
                </Border>
                <Border Stroke="black" StrokeThickness="1" Margin="5">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Picker TextColor="Black" Title="Poškodbe" x:Name="Poskodbe"/>
                </Border>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,20,0,0">
                    <Border Stroke="black" StrokeThickness="1" Margin="5">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Button Text="Začni" HorizontalOptions="Center" BackgroundColor="#D5F889" TextColor="Black" WidthRequest="150" Clicked="Button_Clicked"/>
                    </Border>
                </StackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>