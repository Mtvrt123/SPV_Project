                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Entry Keyboard="Text" Margin="20,10" TextColor="Black"/>
                </Border>
                <Label Text="Priimek:"  Margin="20,15,0,10" TextColor="Black"/>
                <Border Stroke="black" StrokeThickness="1" Margin="5">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Entry Keyboard="Text" Margin="20,10" TextColor="Black"/>
