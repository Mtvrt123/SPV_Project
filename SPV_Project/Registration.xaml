                <Label Text="Email:"  Margin="20,15,0,0" TextColor="Black"/>
                <Border Stroke="black" StrokeThickness="1" Margin="5">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Entry x:Name="Mail" Keyboard="Email" Margin="20,10" TextColor="Black"/>
                </Border>
                <Label Text="Geslo:"  Margin="20,15,0,10" TextColor="Black"/>
                <Border Stroke="black" StrokeThickness="1" Margin="5">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Entry x:Name="Pass1" IsPassword="True" Margin="20,10" TextColor="Black"/>
                </Border>
                <Label Text="Ponovi geslo:"  Margin="20,15,0,10" TextColor="Black"/>
                <Border Stroke="black" StrokeThickness="1" Margin="5">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Entry x:Name="Pass2" IsPassword="True" Margin="20,10" TextColor="Black"/>
                </Border>

                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,20,0,0">
                    <Label Text="Že imate račun?" Margin="0,0,5,0" TextColor="Black" VerticalOptions="Center"/>
                    <Button Text="Prijava" BackgroundColor="Transparent" BorderColor="Transparent" TextColor="Blue" VerticalOptions="Center" Clicked="Button_Clicked"/>
                </StackLayout>

                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,20,0,0">
                    <Border Stroke="black" StrokeThickness="1" Margin="5">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Button Text="Registracija" HorizontalOptions="Center" BackgroundColor="#D5F889" TextColor="Black" WidthRequest="150" Clicked="Button_Clicked_1"/>
