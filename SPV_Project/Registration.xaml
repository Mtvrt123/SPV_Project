            </Border.Background>
        </Border>
        <ScrollView>
            <StackLayout HorizontalOptions="Center">
                <Label Text="BeeFit" FontSize="Large" HorizontalOptions="Center" Margin="0,20,0,10" TextColor="Black"/>
                <Image Source="logo.png" HorizontalOptions="Center" HeightRequest="100" />
                <Label Text="Registracija" FontSize="Large" HorizontalOptions="Center" Margin="0,0,0,10" TextColor="Black"/>
                <!--<Label Text="Ime:"  Margin="20,15,0,10" TextColor="Black"/>
